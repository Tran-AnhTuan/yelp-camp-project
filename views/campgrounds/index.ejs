<% layout('./layouts/boilerplate.ejs') %>
<h1 class="mb-3">All Campgrounds</h1>
<a href="/campgrounds/new" class="btn btn-outline-warning mb-3">Add new campground</a>

<% campgrounds.forEach((camp, index) => { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4"><img class="img-fluid h-100 object-fit-cover" src="<%= camp.images[0].url %>" alt="" /></div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><b>Description:</b> <%=camp.description%></p>
        <p class="card-text"><small><%=camp.location%></small></p>
        <h3>$<%=camp.price%></h3>
        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
      </div>
    </div>
  </div>
</div>
<% }) %>
